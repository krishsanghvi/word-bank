{
  "manifest_version": 3,
  "name": "Word Bank - Vocabulary Builder",
  "version": "1.0",
  "description": "Right-click on any word to get its definition and save it to your personal word bank",

  "permissions": ["storage", "activeTab", "contextMenus"],

  "host_permissions": ["https://api.dictionaryapi.dev/*"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Word Bank",
    "default_icon": {
      "16": "icons/icon_16.svg",
      "32": "icons/icon_32.svg",
      "48": "icons/icon_48.svg",
      "128": "icons/icon_128.svg"
    }
  },

  "icons": {
    "16": "icons/icon_16.svg",
    "32": "icons/icon_32.svg",
    "48": "icons/icon_48.svg",
    "128": "icons/icon_128.svg"
  }
}
